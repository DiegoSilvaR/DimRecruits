<style>
.display-date {
    text-align: center;
    margin-top: 20px;
    margin-bottom: 5px;
    font-size: 1rem;
    font-weight: 300;
}

.display-time {
    display: flex;
    font-size: 2.4rem;
    font-weight: bold;
    padding: 5px 5px;
    transition: ease-in-out 0.1s;
    transition-property: background, box-shadow, color;
    -webkit-box-reflect: below 2px linear-gradient(transparent, rgba(255, 255, 255, 0.05));
}

    .display-time:hover {
    }

#timeline {
    display: flex;
      background: url(<%= image_path("edificio.png") %>);
    background-size: cover;
}

    #timeline:hover .tl-item {
        width: 15%;
    }

.tl-item {
    transform: translate3d(0, 0, 0);
    position: relative;
    width: 100%;
    height: 85vh;
    min-height: 400px;
    color: #fff;
    overflow: hidden;
    transition: width 0.5s ease;
}

    .tl-item:before,
    .tl-item:after {
        transform: translate3d(0, 0, 0);
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
    }

    .tl-item:after {
        background: #33333383;
        opacity: 1;
        transition: opacity 0.5s ease;
    }

    .tl-item:before {
        background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, black 75%);
        z-index: 1;
        opacity: 0;
        transform: translate3d(0, 0, 0) translateY(50%);
        transition: opacity 0.5s ease, transform 0.5s ease;
    }

    .tl-item:hover {
        width: 30% !important;
    }

        .tl-item:hover:after {
            opacity: 0;
        }

        .tl-item:hover:before {
            opacity: 1;
            transform: translate3d(0, 0, 0) translateY(0);
            transition: opacity 1s ease, transform 1s ease 0.25s;
        }

        .tl-item:hover .tl-content {
            opacity: 1;
            transform: translateY(0);
            transition: all 0.75s ease 0.5s;
        }

        .tl-item:hover .tl-bg {
            filter: grayscale(0);
        }



    .tl-content h1 {
        font-family: Bahnschrift, Helvetica Neue, Helvetica, Arial, sans-serif;
        text-transform: uppercase;
        color: #c81f4b;
        font-size: 1.44rem;
        font-weight: 900;
    }

.tl-year {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
    z-index: 1;
    border-top: 3px solid #c81f4b;
    border-bottom: 3px solid #c81f4b;
}

    .tl-year p {
        font-family: Bahnschrift, Helvetica Neue, Helvetica, Arial, sans-serif;
        font-size: 1.4rem;
        line-height: 1;
        padding-top: 15px;
    }

.tl-bg {
    transform: translate3d(0, 0, 0);
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-size: cover;
    background-position: center center;
    transition: filter 0.5s ease;
    filter: grayscale(100%);
}
.tl-content {
    transform: translate3d(0, 0, 0) translateY(25px);
    position: relative;

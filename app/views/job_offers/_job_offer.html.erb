<div id="<%= dom_id job_offer %>">
  <p>
    <strong>Title:</strong>
    <%= job_offer.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= job_offer.description %>
  </p>

  <p>
    <strong>Requirements:</strong>
    <%= job_offer.requirements %>

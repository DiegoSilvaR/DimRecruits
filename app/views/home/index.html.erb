<style>
.display-date {
    text-align: center;
    margin-top: 20px;
    margin-bottom: 5px;
    font-size: 1rem;
    font-weight: 300;
}

.display-time {
    display: flex;
    font-size: 2.4rem;
    font-weight: bold;
    padding: 5px 5px;
    transition: ease-in-out 0.1s;
    transition-property: background, box-shadow, color;
    -webkit-box-reflect: below 2px linear-gradient(transparent, rgba(255, 255, 255, 0.05));
}

    .display-time:hover {
    }

#timeline {
    display: flex;
    
    background-size: cover;
}

    #timeline:hover .tl-item {
        width: 20%;
    }

.tl-item {
    transform: translate3d(0, 0, 0);
    position: relative;
    width: 100%;
    height: 83vh;
    min-height: 400px;
    color: #fff;
    overflow: hidden;
    transition: width 0.5s ease;
}

    .tl-item:before,
    .tl-item:after {
        transform: translate3d(0, 0, 0);
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
    }

    .tl-item:after {
        background: #33333383;
        opacity: 1;
        transition: opacity 0.5s ease;
    }

    .tl-item:before {
        background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, #ffffff00 75%);
        z-index: 1;
        opacity: 0;
        transform: translate3d(0, 0, 0) translateY(50%);
        transition: opacity 0.5s ease, transform 0.5s ease;
    }

    .tl-item:hover {
        width: 30% !important;
    }

        .tl-item:hover:after {
            opacity: 0;
        }

        .tl-item:hover:before {
            opacity: 1;
            transform: translate3d(0, 0, 0) translateY(0);
            transition: opacity 1s ease, transform 1s ease 0.25s;

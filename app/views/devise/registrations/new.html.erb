<h1>Sign up</h1>

<%= form_with(model: @candidate, url: candidates_path, multipart: true) do |form| %>
  <% if @candidate.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@candidate.errors.count, "error") %> prohibited this candidate from being saved:</h2>
      <ul>
        <% @candidate.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :profile_picture, style: "display: block" %>
    <%= form.file_field :profile_picture %>
  </div>

  <div>
    <%= form.label :experience, style: "display: block" %>
    <%= form.text_area :experience %>
  </div>

  <div>
    <%= form.label :skills, style: "display: block" %>
    <%= form.text_area :skills %>
  </div>

  <div>
    <%= form.label :salary_expectation, style: "display: block" %>
    <%= form.text_field :salary_expectation %>
  </div>

  <div>
    <%= form.label :professional_title, style: "display: block" %>
    <%= form.text_field :professional_title %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :password_confirmation, style: "display: block" %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to "Log in", new_candidate_session_path %>
